<%= form_for @postcard, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :recipient_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :recipient_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :recipient_email, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sender_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :sender_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sender_email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :sender_email, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :message, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :image_url, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deliver_on, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :deliver_on, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :status, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  postcards_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
