<%- model_class = Postcard -%>
<div class="page-header">
  <h1><%=t '.title', :default => Postcard %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient_name) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.recipient_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient_email) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.recipient_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sender_name) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.sender_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sender_email) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.sender_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:message) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.message %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image_url) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.image_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:deliver_on) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.deliver_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @postcard.status %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              postcards_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_postcard_path(@postcard), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              postcard_path(@postcard),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

