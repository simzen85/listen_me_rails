<h1>Listing postcards</h1>

<table>
  <thead>
    <tr>
      <th>Recipient name</th>
      <th>Recipient email</th>
      <th>Sender name</th>
      <th>Sender email</th>
      <th>Message</th>
      <th>Image url</th>
      <th>Deliver on</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postcards.each do |postcard| %>
      <tr>
        <td><%= postcard.recipient_name %></td>
        <td><%= postcard.recipient_email %></td>
        <td><%= postcard.sender_name %></td>
        <td><%= postcard.sender_email %></td>
        <td><%= postcard.message %></td>
        <td><%= postcard.image_url %></td>
        <td><%= postcard.deliver_on %></td>
        <td><%= postcard.status %></td>
        <td><%= link_to 'Show', postcard %></td>
        <td><%= link_to 'Edit', edit_postcard_path(postcard) %></td>
        <td><%= link_to 'Destroy', postcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Postcard', new_postcard_path %>
