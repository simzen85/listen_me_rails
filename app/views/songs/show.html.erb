<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => Song %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @song.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:lyric) %></dt>
      <dd><pre class="prettyprint"><%= @song.lyric %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:views) %></dt>
      <dd><pre class="prettyprint"><%= @song.views %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:keywords) %></dt>
      <dd><pre class="prettyprint"><%= @song.keywords %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:uploader) %></dt>
      <dd><pre class="prettyprint"><%= @song.uploader %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:performer) %></dt>
      <dd><pre class="prettyprint"><%= @song.performer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:writer) %></dt>
      <dd><pre class="prettyprint"><%= @song.writer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:album) %></dt>
      <dd><pre class="prettyprint"><%= @song.album %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:views_month) %></dt>
      <dd><pre class="prettyprint"><%= @song.views_month %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @song.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:filename) %></dt>
      <dd><pre class="prettyprint"><%= @song.filename %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              songs_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_path(@song), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_path(@song),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

