<%- model_class = Postcard -%>
<div class="page-header">
  <h1><%=t '.title', :default => Postcard %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:recipient_name) %></th>
      <th><%= model_class.human_attribute_name(:recipient_email) %></th>
      <th><%= model_class.human_attribute_name(:sender_name) %></th>
      <th><%= model_class.human_attribute_name(:sender_email) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:image_url) %></th>
      <th><%= model_class.human_attribute_name(:deliver_on) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @postcards.each do |postcard| %>
      <tr>
        <td><%= postcard.id %></td>
        <td><%= postcard.recipient_name %></td>
        <td><%= postcard.recipient_email %></td>
        <td><%= postcard.sender_name %></td>
        <td><%= postcard.sender_email %></td>
        <td><%= postcard.message %></td>
        <td><%= postcard.image_url %></td>
        <td><%= postcard.deliver_on %></td>
        <td><%= postcard.status %></td>
        <td><%=l postcard.created_at, format: :long %></td>
        <td>
          <%= link_to postcard_path(postcard), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to postcard_path(postcard), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_postcard_path,
            :class => 'btn btn-primary' %>
